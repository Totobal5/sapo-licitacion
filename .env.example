# Environment Variables for Docker Compose
# Copy this file to .env and configure your values

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_secure_password

# ============================================
# MercadoPublico API
# ============================================
# REQUIRED: Get your API key from https://www.mercadopublico.cl/
MERCADOPUBLICO_API_TICKET=your_api_key_here

# ============================================
# Application Configuration
# ============================================
# Port mapping (host:container)
APP_PORT=8080

# Logging level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Show SQL queries in logs (true/false)
SHOW_SQL=false

# ============================================
# JVM Configuration (Optional)
# ============================================
# Uncomment to override default JVM options
# JAVA_OPTS=-Xms256m -Xmx512m
